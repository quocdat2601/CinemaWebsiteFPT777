        }).join('');

        // Hi·ªÉn th·ªã tickets
        showcase.innerHTML = ticketsHtml;
        
        // T·∫°o ph√¢n trang ri√™ng bi·ªát trong pagination card
        const paginationCard = document.getElementById('paginationCard');
        if (totalPages > 1) {
            let paginationHtml = '<div class="ticket-pagination">';
            
            // N√∫t Previous
            if (page > 1) {
                paginationHtml += `<button class="page-btn prev-btn" onclick="changePage(${page - 1})">‚Üê</button>`;
            }
            
            // HI·ªÇN TH·ªä PAGINATION G·ªåN G√ÄNG - CH·ªà 1 H√ÄNG V·ªöI ELLIPSIS
            const maxVisiblePages = 7; // Gi·∫£m xu·ªëng 7 n√∫t ƒë·ªÉ g·ªçn g√†ng
            let startPage = Math.max(1, page - Math.floor(maxVisiblePages / 2));
            let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
            
            // ƒêi·ªÅu ch·ªânh ƒë·ªÉ hi·ªÉn th·ªã ƒë·ªß n√∫t
            if (endPage - startPage + 1 < maxVisiblePages) {
                startPage = Math.max(1, endPage - maxVisiblePages + 1);
            }
            
            // Hi·ªÉn th·ªã n√∫t ƒë·∫ßu n·∫øu c·∫ßn
            if (startPage > 1) {
