                paginationHtml += `<button class="page-btn next-btn" onclick="changePage(${page + 1})">‚Üí</button>`;
            }
            
            paginationHtml += '</div>';
            
            // Hi·ªÉn th·ªã pagination card
            paginationCard.innerHTML = paginationHtml;
            paginationCard.style.display = 'block';
        } else {
            // ·∫®n pagination card n·∫øu ch·ªâ c√≥ 1 trang
            paginationCard.style.display = 'none';
        }
    }

